{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist/",
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "baseUrl": "src",
        "typeRoots": ["src/types", "node_modules/@types"],
        "noImplicitAny": true
    },
    "include": [
        "src/**/*"
    ]
}

