{
  "name": "@lbennett/yuzu",
  "version": "0.0.1-alpha.3",
  "description": "Yuzu is a server-side MVC framework written in TypeScript",
  "main": "dist",
  "repository": "github:LukeeeeBennett/yuzu",
  "scripts": {
    "prepare": "npm run build",
    "prepublish": "npm run lint",
    "build:clean": "rm -rf dist/*",
    "build:compile": "tsc --declaration",
    "build:compile:watch": "npm run build:compile -- --watch",
    "build": "npm run build:clean && npm run build:compile",
    "start": "NODE_ENV=production node dist/index.js",
    "start:dev": "nodemon dist",
    "dev": "npm run build:compile:watch & sleep 3 && npm run start:dev",
    "prettier": "prettier './src/**/*' --write",
    "lint": "eslint './src/**/*'",
    "lint:fix": "npm run lint -- --fix"
  },
  "author": "Luke Bennett <contact@luke.run>",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-router": "^7.0.42",
    "@types/koa-session": "^5.10.1",
    "@types/koa__cors": "^2.2.3",
    "@types/mongoose": "^5.5.17",
    "@types/mongorito": "^3.0.2",
    "@types/passport": "^1.0.1",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-passport": "^4.1.3",
    "koa-router": "^7.4.0",
    "koa-session": "^5.12.3",
    "mongoose": "^5.7.1",
    "mongorito": "^3.0.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  }
}
